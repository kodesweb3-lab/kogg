// This schema should match the main app's schema
// For monorepo setup, you can either:
// 1. Copy the schema from ../prisma/schema.prisma
// 2. Or use a shared Prisma client from the parent
// 
// For now, this is a placeholder - the worker uses @prisma/client
// generated from the main app's schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client"
}
