# ============================================
# Kogaion Environment Variables
# ============================================
#
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
#
# ============================================
# Pinata IPFS Storage
# ============================================
# Required for image and metadata uploads
# Get your JWT from: https://app.pinata.cloud/developers/api-keys
PINATA_JWT=your_pinata_jwt_token

# Solana RPC URL (required)
RPC_URL=your_rpc_url

# Pool Configuration (DBC config key)
# Default: GvoZ6trCqQhNWiDnS5x27XE5tTyKhGepn4dcqg9bLpmL
POOL_CONFIG_KEY=GvoZ6trCqQhNWiDnS5x27XE5tTyKhGepn4dcqg9bLpmL

# PostgreSQL Database URL (required)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/kogaion

# Encryption Key for Bot Tokens (required for bot features)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Must be the same in main app and worker-bots
ENCRYPTION_KEY=your_32_byte_hex_key_or_any_string

# HuggingFace API Key (required for bot features)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key

# ============================================
# Twitter/X API (for service provider verification)
# ============================================
# Optional - Required only for Twitter verification feature
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_CALLBACK_URL=https://your-domain.com/api/twitter/callback
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# ============================================
# Public URLs (for Twitter verification messages)
# ============================================
NEXT_PUBLIC_WEBSITE_URL=https://kogaion.fun
NEXT_PUBLIC_TELEGRAM_URL=https://t.me/kogaionpack
NEXT_PUBLIC_TWITTER_URL=https://x.com/KogaionSol
